---
pagination:
  data: collections.tagList
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
  blogposts: data.blogposts

layout: layouts/home.njk

eleventyComputed:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag }}/
---
<h1>Tagged “{{ tag }}”</h1>
{{ blogposts | log }}
{# {{ collections.tagList | log}} #}

{% set postslist = blogposts | getPostsByTag([tag])  %}
