
<ol reversed class="postlist" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
  {% for post in postslist | reverse %}
  <li class="postlist-item{% if post.slug %} postlist-item-active{% endif %}">
  <a href="/blog/{{ post.slug }}/" class="postlist-link">{% if post.title %}{{ post.title }}{% else %}<code>/blog/{{ item.slug }}</code>{% endif %}</a>
    <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date.toString() }}</time>
    
    {% for tag in post.tags %}

      {%- if collections.tagList.indexOf(tag) != -1 -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
  </li>
{% endfor %}
</ol>